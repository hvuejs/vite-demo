{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "jsx": "preserve",
        "lib": ["esnext", "dom"],
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
            "@theme/*": ["src/theme-chalk/*"]
        },
        "suppressImplicitAnyIndexErrors": true
    },
    "include": ["src/**/*", "src/**/*.d.ts", "script/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
