{
    "compilerOptions": {
        "target": "ES2015",
        "module": "esnext",
        "jsx": "preserve",
        "lib": ["ESNext", "DOM"],
        "sourceMap": true,
        "strict": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        },
        "declaration": true,
        "declarationDir": "types",
        "suppressImplicitAnyIndexErrors": true
    },
    "include": ["src/**/*", "src/**/*.d.ts", "script/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
